{
  "manifest_version": 2,
  "name": "Ignite",
  "description": "This launcher is for enhancing your productivity.",
  "version": "1.2.3",
  "default_locale": "en",
  "permissions": [
    "storage",
    "alarms",
    "notifications"
  ],
  "offline_enabled": true,
  "background": {
    "persistent": true,
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.facebook.com/*",
        "https://*.instagram.com/*",
        "https://*.netflix.com/*"
      ],
      "js": ["data/popup/focusprompt.js"]
    }
  ],
  "browser_action": {
    "default_popup": "data/popup/index.html"
  },
  "commands": {
    "open-interface": {
      "description": "Open the interface in a window"
    }
  }
}